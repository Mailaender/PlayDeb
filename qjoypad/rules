#!/usr/bin/make -f
%:
	dh $@

override_dh_auto_configure:
	dh_installdirs
	cd src && ./config --prefix=/usr/ --install-dir=$(CURDIR)/debian/qjoypad/

override_dh_auto_build:
	cd src && $(MAKE)

override_dh_auto_install:
	cd src && $(MAKE) DESTDIR=$(CURDIR)/debian/qjoypad/ install
	mv debian/qjoypad/usr/bin debian/qjoypad/usr/games
